
@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        var tbş = $('#tblOffice').DataTable({
            responsive: true,
            "iDisplayLength": 25,
            "autoWidth": true,
            "bServerSide": true,
            "bProcessing": true,
            "sAjaxSource": "@Url.Content("~/Company/SearchProductAjaxHandler")",
            "sPaginationType": "full_numbers",
            "columnDefs": [
                {
                    "targets": 0,
                    "visible": false,
                    "searchable": false
                }
            ],
            "aoColumns": [
                { "sName": "Id",  },
                { "sName": "Product"},
                {
                    "sName": "Sil", "bSortable": false, "sClass": "text-center", "mRender": function (data, type, row) {
                        return '<button title="Delete" type="button" class="btn btn-danger btn-circle btn-xs" onclick="DeleteProduct(' + row[0] + ')"><i class="fa fa-minus"></i></button>';

                    }
                },
            ]
        });
    })
    function ShowAddRroduct() {
        $('#txtUrunAdi').val('');
        $('#popupAddProduct').modal('show');
    }
    function UrunEkle() {
        var ProductName = $('#txtUrunAdi').val();
        $.ajax({
            type: "POST",
            //url: "CreateProduct",
            url: "@Url.Content("~/Company/CreateProduct")",
            dataType: "json",
            data: {
                ProductName
            },
            success: function (data) {
                var table = $('#tblOffice').DataTable();
                table.ajax.reload();
            },
            error: function (x, t, m, b) {
                alert(x.responseText);
            }
        });
    }
    function DeleteProduct(id) {
        var ProductName = $('#txtUrunAdi').val();
        $.ajax({
            type: "POST",
            url: "RemoveProduct",
            dataType: "json",
            data: {
                productId: id
            },
            success: function (data) {
                var table = $('#tblOffice').DataTable();
                table.ajax.reload();
            },
            error: function (x, t, m, b) {
                alert(x.responseText);
            }
        });
    }
</script>

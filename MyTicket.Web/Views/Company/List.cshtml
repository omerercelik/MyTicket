
@{
    ViewBag.Title = "Şirket listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        var tbş = $('#tblOffice').DataTable({
            responsive: true,
            "iDisplayLength": 25,
            "autoWidth": true,
            "bServerSide": true,
            "bProcessing": true,
            "sAjaxSource": "@Url.Content("~/Company/SearchCompanyAjaxHandler")",
            "sPaginationType": "full_numbers",
            "columnDefs": [
                {
                    "targets": 0,
                    "visible": false,
                    "searchable": false
                }
            ],
            "aoColumns": [
                { "sName": "Id", "bSortable": false },
                { "sName": "Adi" },
                { "sName": "EPosta" },
                {
                    "sName": "Sil", "bSortable": false, "sClass":"text-center", "mRender": function (data, type, row) {
                        return '<button title="Delete" type="button" class="btn btn-danger btn-circle btn-xs" onclick="DeleteCompany(' + row[0] + ')"><i class="fa fa-minus"></i></button>';
                    }
                }
            ]
        });
    })
    function DeleteCompany(id) {
        //alert(id);
        $.ajax({
            type: "POST",
            url: "RemoveCompany",
            dataType: "json",
            data: {
                companyId: id
            },
            success: function (data) {
                var table = $('#tblOffice').DataTable();
                table.ajax.reload();
            },
            error: function (x, t, m, b) {
                alert(x.responseText);
            }
        });
    }
    function ShowAddCompany() {
        $('#txtSirketAdi').val('');
        $('#txtEPosta').val('');
        $('#txtParola').val('');
        $('#popupCreateCompany').modal('show');
    }
    function SirketEkle() {
        var companyName = $('#txtSirketAdi').val();
        var adminUsername = $('#txtEPosta').val();
        var adminPassword = $('#txtParola').val();
        $.ajax({
            type: "POST",
            url: "AddCompany",
            dataType: "json",
            data: {
                companyName,
                adminUsername,
                adminPassword
            },
            success: function (data) {
                var table = $('#tblOffice').DataTable();
                table.ajax.reload();
            },
            error: function (x, t, m, b) {
                alert(x.responseText);
            }
        });
    }
</script>
<style>
    .dataTables_filter input {
        width: 77%;
    }
</style>
<h2>Şirket listesi</h2>
<hr />
<div class="container">
    <div class="col-lg-2 col-xs-12 form-group">
        <button class="btn-default form-control" onclick="ShowAddCompany()"><i class="fa fa-plus-circle" aria-hidden="true"></i> ŞİRKET EKLE</button>
    </div>
    <div class="col-lg-10 col-xs-12" style="margin-top:5%"></div>
    <table id="tblOffice" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>ŞİRKET</th>
                <th>ADMIN</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div id="popupCreateCompany" class="modal fade" tabindex="-1" role="dialog" style="display:none" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><b>Şirket ekle</b></h5>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-3 required">
                            <b><label class="control-label">Şirket adı :</label></b>
                        </div>
                        <div class="col-lg-9">
                            <input id="txtSirketAdi" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 required">
                            <b><label class="control-label">E-posta :</label></b>
                        </div>
                        <div class="col-lg-9">
                            <input id="txtEPosta" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 required">
                            <b><label class="control-label">Parola :</label></b>
                        </div>
                        <div class="col-lg-9">
                            <input id="txtParola" type="password" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" style="float:left;"><i class="fa fa-times-circle-o"></i> İPTAL</button>
                    <button id="yarat" type="button" class="btn btn-success" onclick="SirketEkle()"><i class="fa fa-check-circle-o"></i> YARAT</button>
                </div>
            </div>
        </div>
    </div>
</div>